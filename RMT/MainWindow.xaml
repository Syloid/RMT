<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RMT"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="RMT.MainWindow"
        mc:Ignorable="d"
        Title="Red's Material Tool v2.0" Height="450" Width="589"
        MinHeight="400" MinWidth="550"
        MaxHeight="450" MaxWidth="589">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="362*"/>
        </Grid.ColumnDefinitions>
        <DockPanel HorizontalAlignment="Stretch"  LastChildFill="False" VerticalAlignment="Stretch"  Grid.ColumnSpan="3">
            <DockPanel.Resources>
                <Style TargetType="Slider" x:Key="style">
                    <Setter Property="Minimum" Value="-24" />
                    <Setter Property="Maximum" Value="24" />
                    <Setter Property="Orientation" Value="Horizontal" />
                </Style>
            </DockPanel.Resources>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem x:Name="newMaterial" Header="New Material" HorizontalAlignment="Left" Click="newMaterial_Click"/>
                    <MenuItem x:Name="editMaterial" Header="Edit Material" HorizontalAlignment="Left" Click="editMaterial_Click" />
                    <MenuItem x:Name="exit" Header="_Exit" Click="exit_Click" />
                </MenuItem>
            </Menu>
            <TabControl x:Name="TabPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsEnabled="False"  >
                <TabItem Header="Albedo">
                    <Grid Background="#FFE5E5E5" Margin="0,0,0,6">
                        <Label Content="ALBEDO MAP FROM" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="121"/>
                        <ComboBox x:Name="albedoMapFrom" SelectionChanged="albedoMapFrom_SelectionChanged" HorizontalAlignment="Left" Margin="138,14,0,0" VerticalAlignment="Top" Width="35">
                            <ComboBoxItem Content="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
                            <ComboBoxItem Content="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="3" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="4" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="5" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="6" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="7" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="8" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="9" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                        </ComboBox>
                        <Button Content="?" HorizontalAlignment="Left" Margin="175,14,0,0" VerticalAlignment="Top" Width="23" Height="22"/>
                        <Label Content="ALBEDO MAP UV_FLIP" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="128"/>
                        <ComboBox x:Name="albedoMapUVFlip" SelectionChanged="albedoMapUVFlip_SelectionChanged" HorizontalAlignment="Left" Margin="138,41,0,0" VerticalAlignment="Top" Width="35">
                            <ComboBoxItem Content="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
                            <ComboBoxItem Content="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="3" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                        </ComboBox>
                        <Label Content="ALBEDO MAP APPLY SCALE" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="162"/>
                        <ComboBox x:Name="albedoMapApplyScale" SelectionChanged="albedoMapApplyScale_SelectionChanged" HorizontalAlignment="Left" Margin="177,76,0,0" VerticalAlignment="Top" Width="35">
                            <ComboBoxItem Content="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
                            <ComboBoxItem Content="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                        </ComboBox>
                        <Label Content="ALBEDO MAP APPLY DIFFUSE" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="172"/>
                        <ComboBox x:Name="albedoMapApplyDiffuse" SelectionChanged="albedoMapApplyDiffuse_SelectionChanged" HorizontalAlignment="Left" Margin="182,107,0,0" VerticalAlignment="Top" Width="35">
                            <ComboBoxItem Content="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
                            <ComboBoxItem Content="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                            <ComboBoxItem Content="2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                        </ComboBox>
                        <Label Content="ALBEDO MAP APPLY MORPH COLOR" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Width="213"/>
                        <ComboBox x:Name="albedoMapApplyMorphColor" SelectionChanged="albedoMapApplyMorphColor_SelectionChanged" HorizontalAlignment="Left" Margin="228,138,0,0" VerticalAlignment="Top" Width="35">
                            <ComboBoxItem Content="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" />
                            <ComboBoxItem Content="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  />
                        </ComboBox>
                        <Label Content="ALBEDO MAP FILE" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Width="113"/>
                        <Button x:Name="albedoMapFileButton" Content="Set Map File" Click="albedoMapFile_Click" HorizontalAlignment="Left" Margin="228,168,0,0" VerticalAlignment="Top" Width="75"/>
                        <Label x:Name="albedoMapFile" FlowDirection="RightToLeft" HorizontalContentAlignment="Right" Content="albedo.png" HorizontalAlignment="Left" Margin="123,165,0,0" VerticalAlignment="Top" Width="94"/>
                        <Label Content="ALBEDO" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Width="57"/>
                        <ComboBox x:Name="albedoMode" SelectionChanged="albedoMode_SelectionChanged" HorizontalAlignment="Left" Margin="228,213,0,0" VerticalAlignment="Top" Width="100">
                            <ComboBoxItem Content="Linear Color"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                            <ComboBoxItem Content="sRGB"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                            <ComboBoxItem Content="Linear sRGB"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                        </ComboBox>
                        <Slider Style="{StaticResource style}" Visibility="Hidden" x:Name="albedoLinearColor" TickFrequency="0.05" IsSnapToTickEnabled="True" ValueChanged="albedoLinearColor_ValueChanged" HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top" Width="213"/>
                        <TextBox x:Name="albedo" FontSize="10" HorizontalAlignment="Left" TextChanged="albedo_TextChanged" PreviewTextInput="albedo_PreviewTextInput" TextAlignment="Center" VerticalContentAlignment="Center" IsEnabled="True" Height="23" Margin="72,213,0,0" TextWrapping="Wrap" Text="{Binding ElementName=albedoLinearColor, Mode=TwoWay, Path=Value, StringFormat=N2,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="151"/>
                        <xctk:ColorPicker Visibility="Hidden" UsingAlphaChannel="False"  Closed="albedoRGB_Closed" SelectedColorChanged="albedoRGB_SelectedColorChanged" Name="albedoRGB" HorizontalAlignment="Left" Margin="72,213,0,0" VerticalAlignment="Top" Width="151"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Alpha">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Normal">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Specular">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Smoothness">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Parallax">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="373*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </TabItem>
                <TabItem Header="Occlusion">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Metalness">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Emissive">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Custom">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
