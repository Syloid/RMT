<Window x:Class="RMT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RMT"
        mc:Ignorable="d"
        Title="Red's Material Tool v2.0" Height="450" Width="589"
        MinHeight="400" MinWidth="550"
        MaxHeight="450" MaxWidth="589">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="362*"/>
        </Grid.ColumnDefinitions>
        <DockPanel HorizontalAlignment="Stretch"  LastChildFill="False" VerticalAlignment="Stretch"  Grid.ColumnSpan="3">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="New Material" HorizontalAlignment="Left" />
                    <MenuItem Header="Edit Material" HorizontalAlignment="Left" />
                    <MenuItem Header="_Exit" />
                </MenuItem>
                <MenuItem Header="_Tools">
                </MenuItem>
            </Menu>
            <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  >
                <TabItem Header="Albedo">
                    <Grid Background="#FFE5E5E5" Margin="0,0,0,6">
                    </Grid>
                </TabItem>
                <TabItem Header="Alpha">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Normal">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Specular">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Smoothness">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Parallax">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="373*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </TabItem>
                <TabItem Header="Occlusion">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Metalness">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Emissive">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Custom">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
