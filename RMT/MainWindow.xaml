<Window x:Class="RMT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RMT"
        mc:Ignorable="d"
        Title="Red's Material Tool v2.0" Height="450" Width="795">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="362*"/>
        </Grid.ColumnDefinitions>
        <DockPanel HorizontalAlignment="Left" Height="419" LastChildFill="False" VerticalAlignment="Top" Width="792" Grid.ColumnSpan="3">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Exit" />
                </MenuItem>
                <MenuItem Header="_Tools">
                    <MenuItem Header="_Manage users">
                        <MenuItem.Icon>
                            <Image Source="/WpfTutorialSamples;component/Images/user.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Show groups" IsCheckable="True" IsChecked="True" />
                </MenuItem>
            </Menu>
            <TabControl HorizontalAlignment="Left" Height="379" Margin="10,22,0,0" VerticalAlignment="Top" Width="772">
                <TabItem Header="Albedo">
                    <Grid Background="#FFE5E5E5" Margin="0,0,0,6"/>

                </TabItem>
                <TabItem Header="Alpha">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Normal">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Specular">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Smoothness">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Parallax">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="373*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </TabItem>
                <TabItem Header="Occlusion">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Metalness">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Emissive">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Custom">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </DockPanel>

    </Grid>
</Window>
