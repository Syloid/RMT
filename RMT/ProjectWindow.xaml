<Window x:Class="RMT.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RMT"
        xmlns:self="clr-namespace:RMT"
        mc:Ignorable="d"
        Title="ProjectWindow" Height="450" Width="800">
    <Grid>
        <TreeView HorizontalAlignment="Left" Name="projectView"  Height="359" Margin="10,10,0,0" VerticalAlignment="Top" Width="754">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type self:ProjectItem}" ItemsSource="{Binding Items}">
                    <TextBlock Text="{Binding Title}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Button Content="Edit" Name="editButton" Click="editButton_Click" HorizontalAlignment="Left" Margin="357,383,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
